# This configuration file contains lists of allowed hosts
# Sets are useful, because they can be extended dynamically.


# List of IPv4 clients to allow for port {{ opensearch_dashboards.server.port }}
set opensearch-dashboards-v4-acl {
    type ipv4_addr
    flags interval
    elements = {
        127.0.0.0/16,
{% for ip in opensearch_dashboards.nftables.whitelist_ipv4 | default([]) if opensearch_dashboards.nftables.whitelist_ipv4 is defined and opensearch_whitelist_ipv4.clients|length %}
        {{ ip }}{{ "," if loop.last }}
{% endfor %}
    }
}

# List of IPv6 clients to allow for port {{ opensearch_dashboards.server.port }}
set opensearch-dashboards-v6-acl {
    type ipv6_addr
    flags interval
    elements = {
        ::1,
{% for ip in opensearch_dashboards.nftables.whitelist_ipv6 if opensearch_dashboards.nftables.whitelist_ipv6 is defined and opensearch_dashboards.nftables.whitelist_ipv6|length %}
        {{ ip }}{{ "," if loop.last }}
{% endfor %}
    }
}
